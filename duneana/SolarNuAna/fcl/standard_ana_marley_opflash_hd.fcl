#include "FlashMatchAna.fcl"
#include "AnalysisTree.fcl"
#include "SimPhotonsAna.fcl"
#include "OpHitFinderDeco.fcl"
#include "OpFlashAnaDeco.fcl"
#include "standard_reco2_dune10kt_1x2x6.fcl"


process_name: anaHD

services:
{
  @table::services
  @table::dunefd_1x2x6_simulation_services
  TFileService: { fileName: "marley_opflash_hd_hist.root" }
    TimeTracker:       {}
    RandomNumberGenerator: {}
    MemoryTracker:         { } # default is one
    @table::dunefd_1x2x6_reco_services
    message:      @local::dune_message_services_prod
}

services.Geometry: @local::dune10kt_1x2x6_v6_refactored_geo   
services.PhotonVisibilityService: @local::dune10kt_vd_photonvisibilityservice_Ar

physics:
{
 analyzers:
 {
   analysistree:      @local::dune10kt_analysistree       
   pmtracktceff:      @local::standard_neutrinotrackingeff
   flashmatch:        @local::standard_flashmatchana
   ophitana:           @local::dune_opflashana_deco
   simphotons :       @local::dunefd_simphotonsana        
 }
 #define the output stream, there could be more than one if using filters 
  stream1:  [ out1 ]
 
  #define the producer and filter modules for this path, order matters, 
  #filters reject all following items.  see lines starting physics.producers below
  ana:  [ analysistree, pmtracktceff, flashmatch, ophitana, simphotons]
 
 
  #end_paths is a keyword and contains the paths that do not modify the art::Event, 
  #ie analyzers and output streams.  these all run simultaneously
  end_paths:     [stream1,ana]
} 

physics.analyzers.simphotons.module_type: "SimPhotonsAna"
physics.analyzers.simphotons.SimPhotonsLiteModuleLabel: "PDFastSim"

